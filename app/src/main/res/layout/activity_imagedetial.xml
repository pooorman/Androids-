<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginBottom="200px"
  android:orientation="vertical">



    <LinearLayout
      android:layout_marginTop="100px"
      android:layout_width="match_parent"
      android:layout_height="150px"
      android:orientation="horizontal">

      <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/idHeadImage"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="45px"
        android:layout_marginRight="45px" />

     <LinearLayout
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:layout_height="150px">
      <TextView
        android:id="@+id/idUsername"
        android:layout_width="wrap_content"
        android:layout_height="75px"
        android:textSize="16sp"
        android:text="happy._.mjq"
        android:textStyle="bold" />

      <TextView
        android:id="@+id/idTime"
        android:layout_width="wrap_content"
        android:text="2023-01-27 18:00:21"
        android:textSize="16sp"

        android:layout_height="75px"/>
     </LinearLayout>
    </LinearLayout>
  <TextView
    android:id="@+id/idTitle"
    android:layout_width="wrap_content"
    android:layout_height="50px"
    android:text="可爱的笨蛋小狗"
    android:layout_marginBottom="40px"
    android:textStyle="bold"
    android:layout_marginTop="45px"
    android:layout_marginLeft="45px"
    android:textSize="14sp" />


  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/id_image_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:scrollbars="none"
    android:divider="@android:color/white"
    android:dividerHeight="8dp" />




  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100px"
    android:layout_marginTop="45px"
    android:layout_marginLeft="700px"
    android:orientation="horizontal">

    <ImageView
      android:id="@+id/btnLike1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="45px"
      android:src="@drawable/baseline_handshake_24"
      android:text="Like" />



    <ImageView
      android:id="@+id/btnComment1"
      android:src="@drawable/baseline_comment_24"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="45px"
      android:text="Comment" />

    <ImageView
      android:id="@+id/btnCollection1"
      android:src="@drawable/baseline_gray_star_24"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="45px"
      android:text="Collection" />
  </LinearLayout>
  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/id_comment_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:scrollbars="none"
    android:divider="@android:color/white"
    android:dividerHeight="8dp" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_marginTop="30px"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/idBottomImage"
      android:layout_width="45dp"
      android:layout_height="150px"
      android:layout_gravity="center"
      android:layout_marginLeft="15px"
      android:layout_marginRight="45px" />

    <EditText
      android:id="@+id/idEditPublish"
      android:layout_width="match_parent"
      android:layout_height="150px"
      android:layout_gravity="center"
      android:hint="说点什么吧..."
      android:layout_marginRight="45px"

      />

  </LinearLayout>
</LinearLayout>
